{
  "parser": "babel-eslint",
  "env": {
    "browser": false,
    "commonjs": true,
    "es6": true,
    "mocha": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "airbnb",
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "plugins": [
    "react",
    "graphql",
    "jest"
  ],
  "rules": {
    "arrow-parens": ["error", "as-needed"],
    "camelcase": 0,
    "new-cap": ["error", { "capIsNewExceptions": [], "newIsCapExceptions": [] }],
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "no-multiple-empty-lines": ["error", { "max": 1, "maxEOF": 1, "maxBOF": 0 }],
    "no-underscore-dangle": ["error", { "allow": ["_ensureIndex", "_id", "_schemaKeys", "__", "_typeMap", "_id"] }],
    "no-unused-expressions": 0,
    "no-warning-comments": [1, { "terms": ["fixme", "todo", "hack"], "location": "start" }],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "space-before-function-paren": ["error", { "anonymous": "never", "named": "never", "asyncArrow": "always" }],
    "import/no-unresolved": [2, { "ignore": ["^[^.].*"], "commonjs": true }]
  },
  "globals": {
    "Assets": true
  }
}
